.page-container {
  position: fixed;
  height: 100vh;
  overflow: hidden;
  top: 0;
  left: 0;
  right: 0;
}
.page-bg {
  position: sticky;
  height: 50%;
  inset: 0;
  width: 100%;
  background: linear-gradient(180deg, #efefaf 0%, #9dd6c5 40%, #ffffff 100%);
  filter: blur(50rpx);
  z-index: 0;
}
.scroll-content {
  position: fixed;
  z-index: 100;
  height: 100%;
  top: 0px;
}
.glass-card {
  background-color: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1rpx solid rgba(255,255,255,0.12); 
  box-shadow: 0 10rpx 30rpx rgba(14, 21, 47, 0.12);
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}
.glass-layer {
  background: linear-gradient(120deg, rgba(239,239,175,0.08) 0%, rgba(94,163,217,0.12) 100%);
  filter: blur(40rpx);
  opacity: 0.9;
  transform: scale(1.08);
}
.glass-inner-shadow {
  background: radial-gradient(ellipse at top left, rgba(255,255,255,0.06), transparent 30%),
              radial-gradient(ellipse at bottom right, rgba(0,0,0,0.06), transparent 30%);
  mix-blend-mode: overlay;
}
.shadow-avatar {
  box-shadow: 0 6rpx 14rpx rgba(14,21,47,0.18), inset 0 1rpx 0 rgba(255,255,255,0.25);
  background: linear-gradient(180deg, rgba(255,255,255,0.9), rgba(255,255,255,0.85));
}
.badge {
  background: linear-gradient(90deg,#f0e6ff,#ffd6e0);
  color: #4b0082;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  box-shadow: 0 6rpx 12rpx rgba(159, 33, 255, 0.10);
}
.title { font-size: 30rpx; color: #07102a; }
.subtitle { font-size: 24rpx; color: rgba(7,16,42,0.72); }
@supports not ((-webkit-backdrop-filter: blur(12px)) or (backdrop-filter: blur(12px))) {
  .glass-card {
    background-color: rgba(255,255,255,0.18);
    box-shadow: 0 14rpx 28rpx rgba(7,16,42,0.14);
  }
  .glass-layer { filter: blur(24rpx); }
}

.submit-btn {
  background-color: #35996e; /* 背景色 */
  color: #ffffff;           /* 文字颜色白色 */
  border: none;             /* 去掉默认边框 */
  border-radius: 50rpx;     /* 圆角 */
  font-size: 32rpx;         /* 字体大小 */
  text-align: center;       /* 文字居中 */
}

.submit-btn:active {
  opacity: 0.8;
}
